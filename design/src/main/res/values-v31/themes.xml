<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_splash_animated</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.Mejourney</item>
    </style>

    <style name="Theme.Mejourney" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>